{
  "name": "meeting-intelligence-backend",
  "version": "1.0.0",
  "description": "AI-Powered Meeting Intelligence System Backend",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:auth": "jest --testPathPattern=auth",
    "test:meetings": "jest --testPathPattern=meetings",
    "test:analysis": "jest --testPathPattern=analysis",
    "test:mcp": "jest --testPathPattern=mcp",
    "db:init": "node src/database/init.js",
    "db:seed": "node src/database/seed.js",
    "db:clear": "node src/database/seed.js clear",
    "db:reset": "npm run db:clear && npm run db:init && npm run db:seed",
    "build": "echo 'No build step required for Node.js backend'",
    "lint": "eslint src/ --ext .js",
    "lint:fix": "eslint src/ --ext .js --fix",
    "format": "prettier --write 'src/**/*.js'",
    "check": "npm run lint && npm run test",
    "logs": "tail -f logs/app.log",
    "cleanup": "node -e \"require('./src/utils/audio').cleanupTempFiles()\"",
    "validate-env": "node -e \"console.log('Environment validation would go here')\"",
    "backup-db": "cp data/meeting_intelligence.db data/backup_$(date +%Y%m%d_%H%M%S).db",
    "docker:build": "docker build -t meeting-intelligence-backend .",
    "docker:run": "docker run -p 8000:8000 meeting-intelligence-backend"
  },
  "dependencies": {
    "assemblyai": "^4.0.0",
    "axios": "^1.6.2",
    "bcrypt": "^5.1.1",
    "better-sqlite3": "^9.2.2",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "ffmpeg-static": "^5.2.0",
    "firebase-admin": "^12.0.0",
    "fluent-ffmpeg": "^2.1.2",
    "form-data": "^4.0.0",
    "googleapis": "^149.0.0",
    "helmet": "^7.1.0",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "node-cron": "^3.0.3",
    "openai": "^4.24.1",
    "sharp": "^0.33.1",
    "socket.io": "^4.7.4",
    "sqlite3": "^5.1.6",
    "uuid": "^9.0.1",
    "ws": "^8.14.2"
  },
  "devDependencies": {
    "@types/jest": "^29.5.8",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "meeting-intelligence",
    "ai",
    "transcription",
    "mcp",
    "real-time"
  ],
  "author": "Meeting Intelligence Team",
  "license": "MIT"
}
